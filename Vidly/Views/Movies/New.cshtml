@model Vidly.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = "New Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>

    @using(@Html.BeginForm("Create","Movies"))
    {

        @Html.HiddenFor(m=>m.Movie.Id)

        <div class="form-group">
              @Html.LabelFor(m=>m.Movie.Name)<br />
              @Html.TextBoxFor(m=>m.Movie.Name, new {@class="form-control"})
              @Html.ValidationMessageFor(m=>m.Movie.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Movie.ReleaseDate)  <br />
            @Html.TextBoxFor(m=>m.Movie.ReleaseDate,"{0:d MMM yyyy}", new {@class="form-control"})
            @Html.ValidationMessageFor(m=>m.Movie.ReleaseDate)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Movie.Genre)
            @Html.DropDownListFor(m=>m.Movie.Genre.Id,new SelectList(Model.Genres,"Id","Name"),"Select Genre", new {@class="form-control"})
            @Html.ValidationMessageFor(m=>m.Movie.Genre)
        </div>
        <div class="form-group">
            @Html.LabelFor(m=>m.Movie.NumberOfStocks)<br />
            @Html.TextBoxFor(m=>m.Movie.NumberOfStocks, new {@class="form-control"})
            @Html.ValidationMessageFor(m=>m.Movie.NumberOfStocks)
        </div>

        <button class="btn btn-primary" type="submit">SAVE</button>
    
    }

@section scripts
{
      @Scripts.Render("~/bundles/jqueryval")
}

