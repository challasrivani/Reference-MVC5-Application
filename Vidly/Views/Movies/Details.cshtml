@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<br />

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.Value.ToString("dd MMM yyyy")</li>
    <li>Date Added: @Model.DateAdded.Value.ToString("dd MMM yyyy")</li>
    <li>Number in Stock: @Model.NumberOfStocks</li>

</ul>